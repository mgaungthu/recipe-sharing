model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String    @unique
  password  String
  role      String    @default("user")
  isActive  Boolean   @default(true)
  recipes   Recipe[]  @relation("UserRecipes")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}